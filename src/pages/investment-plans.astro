<style>
main {
	padding: 80px 40px;
	max-width: 1600px;
	margin: 0 auto;
}

h1 {
	font-size: 3.5rem;
	font-weight: 700;
	color: #111827;
	margin: 0 0 30px 0;
	text-align: center;
	letter-spacing: -0.5px;
}

h2 {
	font-size: 2rem;
	font-weight: 700;
	color: #111827;
	margin: 60px 0 16px 0;
	text-align: center;
}

p {
	text-align: center;
	color: #6b7280;
	margin-bottom: 40px;
	max-width: 800px;
	margin-left: auto;
	margin-right: auto;
	font-size: 1.05rem;
	line-height: 1.6;
}

.plans-container {
	display: flex;
	flex-wrap: wrap;
	gap: 20px;
	width: 100%;
	justify-content: center;
	align-items: flex-start;
}

section {
	margin-bottom: 60px;
}

section:last-child {
	margin-bottom: 0;
}

@media (min-width: 2000px) {
	main {
		padding: 80px 60px;
	}
}

@media (max-width: 1024px) {
	main {
		padding: 60px 30px;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 50px;
	}

	h2 {
		font-size: 1.75rem;
	}
}

/* Recommendation Section */
.recommendation {
	margin: 60px 0;
}

.recommendation-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	gap: 24px;
	margin-top: 40px;
}

.recommendation-card {
	background: linear-gradient(135deg, #f0f9ff 0%, #f5f3ff 100%);
	padding: 32px;
	border-radius: 12px;
	border: 1px solid #e0e7ff;
	text-align: left;
	display: flex;
	flex-direction: column;
	gap: 12px;
}

.recommendation-card h3 {
	font-size: 1.25rem;
	color: #111827;
	margin: 0;
	font-weight: 600;
}

.recommendation-card p {
	color: #6b7280;
	margin: 0;
	line-height: 1.6;
	font-size: 0.95rem;
}

.rec-link {
	color: #1e40af;
	font-weight: 600;
	text-decoration: none;
	display: inline-flex;
	align-items: center;
	gap: 6px;
	transition: all 0.2s ease;
	margin-top: 8px;
	font-size: 0.95rem;
}

.rec-link:hover {
	color: #1a3a9c;
	transform: translateX(2px);
}

/* Getting Started Section */
.getting-started {
	margin: 60px 0;
}

.steps-container {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	gap: 24px;
	margin-top: 40px;
}

.step {
	text-align: center;
	padding: 20px;
}

.step-number {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 60px;
	height: 60px;
	background: #1e40af;
	color: #ffffff;
	font-size: 1.75rem;
	font-weight: 700;
	border-radius: 50%;
	margin-bottom: 16px;
}

.step h3 {
	font-size: 1.1rem;
	color: #111827;
	margin: 12px 0;
}

.step p {
	color: #6b7280;
	font-size: 0.95rem;
	line-height: 1.6;
	margin: 0;
}

/* Testimonials Section */
.testimonials {
	margin: 60px 0;
}

.testimonials-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 24px;
	margin-top: 40px;
}

.testimonial-card {
	background: #ffffff;
	padding: 32px;
	border-radius: 12px;
	border-left: 4px solid #1e40af;
	box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
}

.testimonial-text {
	font-size: 1rem;
	color: #475569;
	line-height: 1.8;
	margin: 0 0 16px 0;
	font-style: italic;
}

.testimonial-author {
	color: #6b7280;
	font-size: 0.9rem;
	margin: 0;
}

@media (max-width: 768px) {
	main {
		padding: 50px 20px;
	}
	
	h1 {
		font-size: 2rem;
		margin-bottom: 40px;
	}

	h2 {
		font-size: 1.5rem;
	}

	p {
		font-size: 0.95rem;
	}
	
	.plans-container {
		grid-template-columns: 1fr;
		gap: 16px;
	}

	.recommendation-grid {
		grid-template-columns: 1fr;
	}

	.steps-container {
		grid-template-columns: 1fr;
	}

	.testimonials-grid {
		grid-template-columns: 1fr;
	}

	/* Floating Chat Button */
	.floating-chat-btn {
		position: fixed;
		bottom: 30px;
		right: 30px;
		background: linear-gradient(135deg, #25d366 0%, #1da853 100%);
		color: white;
		border-radius: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		box-shadow: 0 8px 20px rgba(37, 211, 102, 0.3);
		transition: all 0.3s ease;
		z-index: 999;
		gap: 10px;
		padding: 12px 20px;
		height: fit-content;
	}

	.floating-chat-btn:hover {
		transform: scale(1.1);
		box-shadow: 0 12px 30px rgba(37, 211, 102, 0.4);
	}

	.floating-chat-btn:active {
		transform: scale(0.95);
	}

	.floating-chat-btn svg {
		width: 24px;
		height: 24px;
		flex-shrink: 0;
	}

	.floating-chat-btn span {
		font-size: 0.85rem;
		font-weight: 600;
		white-space: nowrap;
	}

	@media (max-width: 768px) {
		.floating-chat-btn {
			bottom: 20px;
			right: 20px;
			width: 55px;
			height: 55px;
			padding: 0;
		}

		.floating-chat-btn span {
			display: none;
		}
	}
}
</style>