<style>
	body {
		overflow-x: hidden;
		margin: 0;
		padding: 0;
	}

	main {
		width: 100%;
		overflow-x: hidden;
	}

	/* Hero Section */
	.hero-section {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		text-align: center;
		background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
	}

	.hero-content {
		max-width: 800px;
		padding: 60px 20px;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 700;
		color: #221d1dff;
		margin: 0 0 20px 0;
		line-height: 1.2;
	}

	.hero-tagline {
		font-size: 1.25rem;
		color: #64748b;
		margin: 0;
		font-weight: 400;
		line-height: 1.6;
	}

	/* Section Styles */
	.crypto-section {
		padding: 80px 100px;
		background-color: #ffffff;
	}

	.stockmarket-section {
		padding: 80px 100px;
		background-color: #f8fafc;
	}

	.realestate-section {
		padding: 80px 100px;
		background-color: #ffffff;
	}

	.mining-section {
		padding: 80px 100px;
		background-color: #f8fafc;
	}

	/* Content Layout */
	.crypto-content,
	.stockmarket-content,
	.realestate-content,
	.mining-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		gap: 60px;
	}

	.crypto-text,
	.stockmarket-text,
	.realestate-text,
	.mining-text {
		flex: 1;
	}

	.crypto-text h2,
	.stockmarket-text h2,
	.realestate-text h2,
	.mining-text h2 {
		font-size: 2.5rem;
		font-weight: 600;
		color: #221d1dff;
		margin: 0 0 20px 0;
	}

	.crypto-text p,
	.stockmarket-text p,
	.realestate-text p,
	.mining-text p {
		font-size: 1.1rem;
		line-height: 1.6;
		color: #64748b;
		margin: 0 0 30px 0;
		max-width: 600px;
	}

	/* Features */
	.features {
		display: flex;
		flex-direction: column;
		gap: 20px;
		margin-bottom: 30px;
	}

	.feature {
		padding: 15px;
		background: rgba(30, 64, 175, 0.05);
		border-left: 4px solid #1e40af;
		border-radius: 8px;
	}

	.feature h3 {
		font-size: 1rem;
		font-weight: 600;
		color: #221d1dff;
		margin: 0 0 8px 0;
	}

	.feature p {
		font-size: 0.95rem;
		color: #64748b;
		margin: 0;
	}

	/* Service Details */
	.service-details {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 20px;
		margin-bottom: 30px;
		padding: 20px 0;
		border-top: 1px solid #e2e8f0;
		border-bottom: 1px solid #e2e8f0;
	}

	.detail-box {
		text-align: center;
	}

	.detail-box h4 {
		font-size: 0.9rem;
		font-weight: 600;
		color: #64748b;
		margin: 0 0 8px 0;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.detail-box .value {
		font-size: 1.5rem;
		font-weight: 700;
		color: #1e40af;
		margin: 0;
	}

	/* Getting Started */
	.getting-started {
		margin-top: 30px;
	}

	.getting-started h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: #221d1dff;
		margin: 0 0 20px 0;
	}

	.getting-started ol {
		margin: 0;
		padding-left: 20px;
		list-style: none;
		counter-reset: step-counter;
	}

	.getting-started li {
		counter-increment: step-counter;
		margin-bottom: 15px;
		padding-left: 35px;
		position: relative;
		font-size: 1rem;
		color: #64748b;
		line-height: 1.6;
	}

	.getting-started li::before {
		content: counter(step-counter);
		position: absolute;
		left: 0;
		top: 0;
		width: 28px;
		height: 28px;
		background: #1e40af;
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: 600;
		font-size: 0.9rem;
	}

	.getting-started strong {
		color: #221d1dff;
	}

	/* Images */
	.crypto-image,
	.stockmarket-image,
	.realestate-image,
	.mining-image {
		flex: 1;
		width: 100%;
		height: 400px;
		max-width: 500px;
		border-radius: 20px;
		object-fit: cover;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	/* Comparison Section */
	.comparison-section {
		padding: 80px 100px;
		background-color: #ffffff;
	}

	.comparison-section h2 {
		font-size: 2.5rem;
		font-weight: 600;
		color: #221d1dff;
		text-align: center;
		margin: 0 0 50px 0;
	}

	.comparison-table {
		max-width: 1200px;
		margin: 0 auto;
		overflow-x: auto;
	}

	.comparison-table table {
		width: 100%;
		border-collapse: collapse;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		border-radius: 12px;
		overflow: hidden;
	}

	.comparison-table th {
		background: #1e40af;
		color: white;
		padding: 20px;
		text-align: left;
		font-weight: 600;
		font-size: 1rem;
	}

	.comparison-table td {
		padding: 18px 20px;
		border-bottom: 1px solid #e2e8f0;
		font-size: 0.95rem;
		color: #64748b;
	}

	.comparison-table tbody tr:hover {
		background: #f8fafc;
	}

	.comparison-table tbody tr:last-child td {
		border-bottom: none;
	}

	/* FAQ Section */
	.faq-section {
		padding: 80px 100px;
		background-color: #f8fafc;
	}

	.faq-section h2 {
		font-size: 2.5rem;
		font-weight: 600;
		color: #221d1dff;
		text-align: center;
		margin: 0 0 50px 0;
	}

	.faq-grid {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 30px;
	}

	.faq-item {
		background: white;
		padding: 30px;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: all 0.3s ease;
	}

	.faq-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}

	.faq-item h3 {
		font-size: 1.1rem;
		font-weight: 600;
		color: #221d1dff;
		margin: 0 0 15px 0;
	}

	.faq-item p {
		font-size: 0.95rem;
		color: #64748b;
		line-height: 1.6;
		margin: 0;
	}

	/* Responsive */
	@media (max-width: 1024px) {
		.crypto-section,
		.stockmarket-section,
		.realestate-section,
		.mining-section {
			padding: 60px 40px;
		}

		.crypto-content,
		.stockmarket-content,
		.realestate-content,
		.mining-content {
			flex-direction: column;
			gap: 40px;
		}

		.comparison-section,
		.faq-section {
			padding: 60px 40px;
		}
	}

	@media (max-width: 768px) {
		.hero-section {
			min-height: 40vh;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-tagline {
			font-size: 1.1rem;
		}

		.crypto-section,
		.stockmarket-section,
		.realestate-section,
		.mining-section {
			padding: 40px 20px;
		}

		.crypto-text h2,
		.stockmarket-text h2,
		.realestate-text h2,
		.mining-text h2 {
			font-size: 2rem;
		}

		.crypto-text p,
		.stockmarket-text p,
		.realestate-text p,
		.mining-text p {
			font-size: 1rem;
		}

		.service-details {
			grid-template-columns: 1fr;
		}

		.comparison-table table {
			font-size: 0.85rem;
		}

		.comparison-table th,
		.comparison-table td {
			padding: 12px 15px;
		}

		.faq-grid {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.faq-item {
			padding: 20px;
		}
