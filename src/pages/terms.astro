<style>
	main {
		min-height: 100vh;
	}

	.policy-hero {
		padding: 60px 40px 80px;
		text-align: center;
		background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
	}

	.policy-hero h1 {
		font-size: 3.5rem;
		font-weight: 700;
		color: #000000;
		margin: 0 0 20px 0;
	}

	.last-updated {
		font-size: 1rem;
		color: #6b7280;
		margin: 0;
	}

	.policy-content {
		padding: 80px 40px;
	}

	.policy-container {
		max-width: 900px;
		margin: 0 auto;
		color: #333333;
		line-height: 1.8;
	}

	.policy-container h2 {
		font-size: 1.75rem;
		font-weight: 600;
		color: #1e40af;
		margin: 40px 0 20px 0;
		padding-top: 20px;
	}

	.policy-container h2:first-of-type {
		margin-top: 0;
	}

	.policy-container p {
		font-size: 1rem;
		color: #555555;
		margin-bottom: 15px;
	}

	.policy-container ul {
		list-style: none;
		padding: 0 0 20px 0;
		margin: 0;
	}

	.policy-container li {
		padding-left: 30px;
		position: relative;
		margin-bottom: 12px;
		color: #555555;
	}

	.policy-container li::before {
		content: "âœ“";
		position: absolute;
		left: 0;
		color: #1e40af;
		font-weight: bold;
		font-size: 1.2rem;
	}

	.policy-container a {
		color: #1e40af;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.policy-container a:hover {
		color: #1d4ed8;
		text-decoration: underline;
	}

	@media (max-width: 1024px) {
		.policy-hero {
			padding: 50px 30px 60px;
		}

		.policy-hero h1 {
			font-size: 2.5rem;
		}

		.policy-content {
			padding: 60px 30px;
		}

		.policy-container h2 {
			font-size: 1.5rem;
		}
	}

	@media (max-width: 768px) {
		.policy-hero {
			padding: 40px 20px 50px;
		}

		.policy-hero h1 {
			font-size: 2rem;
		}

		.policy-content {
			padding: 40px 20px;
		}

		.policy-container {
			font-size: 0.95rem;
		}

		.policy-container h2 {
			font-size: 1.3rem;
			margin: 30px 0 15px 0;
		}

		.policy-container p {
			font-size: 0.95rem;
		}
	}

	@media (max-width: 480px) {
		.policy-hero {
			padding: 30px 15px 40px;
		}

		.policy-hero h1 {
			font-size: 1.6rem;
		}

		.policy-content {
			padding: 30px 15px;
		}

		.policy-container h2 {
			font-size: 1.1rem;
		}
	}
</style>
