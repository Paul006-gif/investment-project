<style>
	.faqs-hero {
		padding: 100px 20px 60px 20px;
		text-align: center;
	}

	.faqs-hero h1 {
		font-size: 3rem;
		font-weight: 700;
		color: #000000;
		margin: 0;
	}

	.faqs-content {
		padding: 0 20px 100px 20px;
		max-width: 800px;
		margin: 0 auto;
	}

	.faq-list {
		display: flex;
		flex-direction: column;
	}

	.faq-item {
		background: transparent;
		padding: 0;
	}

	.faq-divider {
		width: 100%;
		height: 1px;
		background: #e2e8f0;
		margin: 2px 0 8px 0;
		position: relative;
	}

	.faq-divider::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: #cbd5e1;
	}

	.faq-question {
		width: 100%;
		background: none;
		border: none;
		padding: 10px 25px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		cursor: pointer;
		font-size: 1.1rem;
		font-weight: 600;
		color: #000000;
		text-align: left;
		text-decoration: none;
		position: relative;
	}

	.faq-question span:first-child {
		position: relative;
	}

	.faq-question span:first-child::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		right: 0;
		height: 1px;
		background: #1e40af;
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.faq-question:hover span:first-child::after {
		transform: scaleX(1);
	}

	.faq-icon {
		font-size: 1.5rem;
		font-weight: 700;
		color: #1e40af;
		transition: transform 0.3s ease;
	}

	.faq-question.active .faq-icon {
		transform: rotate(45deg);
	}

	.faq-answer {
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease, padding 0.3s ease;
	}

	.faq-answer.active {
		max-height: 250px;
		padding: 0 25px 10px 25px;
	}

	.faq-answer p {
		color: #666666;
		line-height: 1.6;
		margin: 0;
	}

	@media (max-width: 768px) {
		.faqs-hero {
			padding: 60px 20px 40px 20px;
		}
		
		.faqs-hero h1 {
			font-size: 2rem;
		}
		
		.faqs-content {
			padding: 0 20px 60px 20px;
		}
		
		.faq-question {
			padding: 15px 20px;
			font-size: 1rem;
		}
		
		.faq-answer.active {
			padding: 0 20px 15px 20px;
		}
	}

	/* Floating Chat Button */
	.floating-chat-btn {
		position: fixed;
		bottom: 30px;
		right: 30px;
		background: linear-gradient(135deg, #25d366 0%, #1da853 100%);
		color: white;
		border-radius: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		box-shadow: 0 8px 20px rgba(37, 211, 102, 0.3);
		transition: all 0.3s ease;
		z-index: 999;
		gap: 10px;
		padding: 12px 20px;
		height: fit-content;
	}

	.floating-chat-btn:hover {
		transform: scale(1.1);
		box-shadow: 0 12px 30px rgba(37, 211, 102, 0.4);
	}

	.floating-chat-btn:active {
		transform: scale(0.95);
	}

	.floating-chat-btn svg {
		width: 24px;
		height: 24px;
		flex-shrink: 0;
	}

	.floating-chat-btn span {
		font-size: 0.85rem;
		font-weight: 600;
		white-space: nowrap;
	}

	@media (max-width: 768px) {
		.floating-chat-btn {
			bottom: 20px;
			right: 20px;
			width: 55px;
			height: 55px;
			padding: 0;
		}

		.floating-chat-btn span {
			display: none;
		}
	}
</style>

<script>
	/**
	 * Toggle FAQ answer visibility
	 * @param {HTMLButtonElement} button - The FAQ question button
	 */
	// @ts-ignore
	window.toggleFAQ = function(button) {
		console.log('FAQ clicked'); // Debug log
		const answer = button.nextElementSibling;
		console.log('Answer element:', answer); // Debug log
		const isActive = button.classList.contains('active');
		console.log('Is active:', isActive); // Debug log
		
		// Close all other FAQs
		document.querySelectorAll('.faq-question').forEach(q => {
			q.classList.remove('active');
			const nextElement = q.nextElementSibling;
			if (nextElement) {
				nextElement.classList.remove('active');
			}
		});
		
		// Toggle current FAQ
		if (!isActive) {
			button.classList.add('active');
			answer.classList.add('active');
			console.log('Added active classes'); // Debug log
		}
	};

	// Initialize when DOM is ready
	document.addEventListener('DOMContentLoaded', function() {
		console.log('DOM loaded'); // Debug log
		// Make sure all FAQ answers are initially hidden
		document.querySelectorAll('.faq-answer').forEach(answer => {
			answer.classList.remove('active');
		});
		console.log('FAQs initialized'); // Debug log
	});
</script>
