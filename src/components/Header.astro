---
import languageIcon from './icons/language.svg';
import Services from './Services.astro';
import LanguageModal from './LanguageModal.astro';

const currentPath = Astro.url.pathname;
---

<header>
	<div class="header-content">
		<div class="logo-section">
			<img src="/logo1.png" alt="Logo" class="logo" />
		</div>

		<nav class="nav-tabs" id="navTabs">
			<a href="/" class={`tab ${currentPath === '/' ? 'active' : ''}`}>Home</a>
			<a href="/about" class={`tab ${currentPath === '/about' ? 'active' : ''}`}>About Us</a>
			<a href="/services" class={`tab ${currentPath === '/services' ? 'active' : ''}`}>Services</a>
			<a href="/investment-plans" class={`tab ${currentPath === '/investment-plans' ? 'active' : ''}`}>Investment Plans</a>
			<a href="/faqs" class={`tab ${currentPath === '/faqs' ? 'active' : ''}`}>FAQs</a>
			<a href="/support" class={`tab ${currentPath === '/support' ? 'active' : ''}`}>Get Support</a>
			
			<!-- Mobile only auth buttons -->
			<div class="mobile-auth">
				<a href="/signin" class="btn btn-secondary">Sign In</a>
				<a href="/signup" class="btn btn-primary">Sign Up</a>
			</div>
		</nav>

		<div class="right-section">
			<div class="language-icon-container">
				<div class="language-icon">
					<img src={languageIcon.src} alt="Language" />
				</div>
				<LanguageModal />
			</div>
			<a href="/signin" class="btn btn-secondary desktop-signin">Sign In</a>
			<a href="/signup" class="btn btn-primary desktop-signup">Sign Up</a>
			<button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 1024 1024" class="menu-icon">
					<path fill="currentColor" d="M27 193.6c-8.2-8.2-12.2-18.6-12.2-31.2s4-23 12.2-31.2S45.6 119 58.2 119h912.4c12.6 0 23 4 31.2 12.2s12.2 18.6 12.2 31.2s-4 23-12.2 31.2s-18.6 12.2-31.2 12.2H58.2c-12.6 0-23-4-31.2-12.2zm974.8 285.2c8.2 8.2 12.2 18.6 12.2 31.2s-4 23-12.2 31.2s-18.6 12.2-31.2 12.2H58.2c-12.6 0-23-4-31.2-12.2S14.8 522.6 14.8 510s4-23 12.2-31.2s18.6-12.2 31.2-12.2h912.4c12.6 0 23 4 31.2 12.2zm0 347.4c8.2 8.2 12.2 18.6 12.2 31.2s-4 23-12.2 31.2s-18.6 12.2-31.2 12.2H58.2c-12.6 0-23-4-31.2-12.2S14.8 870 14.8 857.4s4-23 12.2-31.2S45.6 814 58.2 814h912.4c12.6 0 23 4.2 31.2 12.2z"/>
				</svg>
			</button>
		</div>

		<div class="dropdown-backdrop"></div>
	</div>
</header>

<script>
	// Mobile menu toggle
	document.addEventListener('DOMContentLoaded', () => {
		const menuToggle = document.getElementById('mobileMenuToggle');
		const navTabs = document.getElementById('navTabs');
		
		if (menuToggle && navTabs) {
			menuToggle.addEventListener('click', () => {
				navTabs.classList.toggle('active');
				menuToggle.classList.toggle('active');
			});

			// Close menu when a regular link is clicked
			const navLinks = navTabs.querySelectorAll('a:not(.dropdown-trigger)');
			navLinks.forEach(link => {
				link.addEventListener('click', () => {
					navTabs.classList.remove('active');
					menuToggle.classList.remove('active');
				});
			});



			// Close menu when clicking outside
			document.addEventListener('click', (e) => {
				if (!e.target.closest('header')) {
					navTabs.classList.remove('active');
					menuToggle.classList.remove('active');
					navTabs.querySelectorAll('.dropdown').forEach(d => {
						d.classList.remove('active');
					});
				}
			});
		}

		// Language modal functionality
		const container = document.querySelector('.language-icon-container');
		const modal = document.querySelector('.language-modal');
		
		if (container && modal) {
			container.addEventListener('mouseenter', () => {
				modal.style.opacity = '1';
				modal.style.pointerEvents = 'auto';
			});
			
			// Keep modal open when hovering over modal itself
			const hoverArea = container;
			hoverArea.addEventListener('mouseleave', (e) => {
				// Check if mouse is moving to modal or outside both
				setTimeout(() => {
					if (!container.matches(':hover') && !modal.matches(':hover')) {
						modal.style.opacity = '0';
						modal.style.pointerEvents = 'none';
					}
				}, 100);
			});

			// Close when leaving modal
			modal.addEventListener('mouseleave', (e) => {
				setTimeout(() => {
					if (!container.matches(':hover') && !modal.matches(':hover')) {
						modal.style.opacity = '0';
						modal.style.pointerEvents = 'none';
					}
				}, 100);
			});
		}
	});
</script>

<style>
	header {
		border-bottom: 1px solid #ece6e6ff;
		height: 60px;
		width: 100%;
		position: sticky;
		top: 0;
		background-color: white;
		z-index: 1000;
	}
	
	.header-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 100%;
		margin: 0 100px;
		gap: 40px;
	}

	.logo-section {
		display: flex;
		align-items: center;
		flex-shrink: 0;
	}

	.right-section {
		display: flex;
		align-items: center;
		gap: 16px;
		flex-shrink: 0;
		margin-left: auto;
	}

	.language-icon {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background-color: #f5f5f5;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background-color 0.2s ease;
	}

	.language-icon img {
		width: 20px;
		height: 20px;
	}

	.language-icon-container {
		position: relative;
	}
	
	.nav-tabs {
		display: flex;
		align-items: center;
		gap: 20px;
		flex: 1;
	}

	.dropdown-trigger {
		display: inline-flex;
		background: none;
		border: none;
		color: #000;
		font-weight: 600;
		font-size: 1.125rem;
		padding: 8px 16px;
		border-radius: 9999px;
		cursor: pointer;
		transition: all 0.25s ease;
		text-decoration: none;
		align-items: center;
		white-space: nowrap;
		width: auto;
	}

	.dropdown-trigger:hover {
		background-color: #f0f4ff;
		color: #1e40af;
	}

	.dropdown-trigger.active {
		background-color: #1e40af;
		color: white;
	}

	.dropdown-panel {
		position: absolute;
		top: 100%;
		left: 0;
		opacity: 0;
		pointer-events: none;
		transform: translateY(-8px);
		transition: opacity 0.25s ease, transform 0.25s ease;
		z-index: 100;
		padding-top: 12px;
	}

	.dropdown-panel::before {
		content: '';
		position: absolute;
		top: -8px;
		left: 0;
		right: 0;
		height: 8px;
	}

	.dropdown:hover .dropdown-panel,
	.dropdown:focus-within .dropdown-panel {
		opacity: 1;
		pointer-events: auto;
		transform: translateY(0);
	}

	.dropdown:hover .dropdown-trigger,
	.dropdown:focus-within .dropdown-trigger {
		background-color: #f0f4ff;
		color: #1e40af;
	}

	.mobile-auth {
		display: none;
	}

	.dropdown-backdrop {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(30, 64, 175, 0.05);
		opacity: 0;
		pointer-events: none;
		transition: opacity 0.2s ease;
		z-index: 50;
	}

	.dropdown:hover ~ .dropdown-backdrop,
	.dropdown:focus-within ~ .dropdown-backdrop {
		opacity: 1;
		pointer-events: auto;
	}
	
	.tab {
		display: inline-flex;
		align-items: center;
		text-decoration: none;
		color: #000;
		font-weight: 600;
		font-size: 1.125rem;
		padding: 8px 16px;
		border-radius: 9999px;
		transition: background-color 0.2s ease;
		white-space: nowrap;
	}
	
	.tab:hover {
		background-color: #f5f5f5;
	}
	
	.tab.active {
		background-color: #1e40af;
		color: white;
	}
	
	.tab.active:hover {
		background-color: #1a3a9c;
	}
	
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		font-weight: 600;
		font-size: 1rem;
		padding: 10px 24px;
		border-radius: 16px;
		text-decoration: none;
		transition: all 0.25s ease;
		white-space: nowrap;
		border: none;
		cursor: pointer;
	}

	.btn-primary {
		background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
		color: #fff;
	}

	.btn-primary:hover {
		background: linear-gradient(135deg, #1a3a9c 0%, #1d4ed8 100%);
		transform: translateY(-2px);
	}

	.btn-primary:active {
		transform: translateY(0);
	}

	.btn-secondary {
		background-color: #f0f4ff;
		color: #1e40af;
		border: 1.5px solid #e0e7ff;
	}

	.btn-secondary:hover {
		background-color: #e0e7ff;
		color: #1a3a9c;
		border-color: #c7d2fe;
		transform: translateY(-2px);
	}

	.btn-secondary:active {
		transform: translateY(0);
	}

	.logo {
		height: 40px;
		width: auto;
	}
	
	img {
		height: 40px;
		width: auto;
	}

	.desktop-signin,
	.desktop-signup {
		display: inline-flex;
	}

	/* Mobile Menu Toggle */
	.mobile-menu-toggle {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
		padding: 6px;
		margin: 0;
		width: auto;
		height: auto;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.menu-icon {
		width: 24px;
		height: 24px;
		color: #000;
		transition: all 0.3s ease;
	}

	.mobile-menu-toggle:hover .menu-icon {
		color: #1e40af;
	}

	/* Tablet & Mobile Responsive (1024px and below) */
	@media (max-width: 1024px) {
		.header-content {
			margin: 0 40px;
			gap: 15px;
		}

		.nav-tabs {
			gap: 12px;
		}

		.tab {
			font-size: 1rem;
			padding: 6px 12px;
		}

		.btn {
			font-size: 1rem;
			padding: 8px 16px;
		}

		.cta-group {
			gap: 12px;
		}
	}

	/* Tablet (768px to 1024px) */
	@media (max-width: 768px) {
		header {
			height: 56px;
		}

		.header-content {
			margin: 0 12px;
			gap: 8px;
			position: relative;
		}

		.logo-section {
			flex-shrink: 0;
		}

		.mobile-menu-toggle {
			display: flex;
			z-index: 1001;
			flex-shrink: 0;
		}

		.right-section {
			gap: 10px;
			margin-left: auto;
		}

		.nav-tabs {
			position: fixed;
			top: 56px;
			left: 0;
			right: 0;
			bottom: 0;
			flex-direction: column;
			background-color: white;
			gap: 0;
			max-height: 0;
			overflow-y: auto;
			transition: max-height 0.3s ease;
			padding: 0;
			z-index: 999;
			display: flex;
		}

		.nav-tabs.active {
			max-height: 100vh;
		}

		.nav-tabs a {
			display: block;
			width: 100%;
			padding: 12px 16px;
			margin-left: 16px;
			border-bottom: 1px solid #f5f5f5;
			border-radius: 0;
			text-decoration: none;
			color: #000;
			font-weight: 600;
			font-size: 1.1rem;
			transition: background-color 0.2s ease;
		}

		.nav-tabs a:hover {
			background-color: #f0f4ff;
		}

		.nav-tabs a.active {
			background-color: transparent;
			color: #000;
		}



		.mobile-auth {
			display: flex;
			flex-direction: row;
			gap: 8px;
			border-top: 1px solid #f5f5f5;
			padding: 12px 16px;
			margin-top: auto;
			width: fit-content;
		}

		.mobile-auth a {
			padding: 12px 16px;
			font-size: 0.95rem;
			text-align: center;
			border-radius: 16px;
			display: inline-flex;
		}

		.desktop-signin,
		.desktop-signup {
			display: none;
		}

		.language-icon {
			width: 36px;
			height: 36px;
		}

		.language-icon img {
			width: 18px;
			height: 18px;
		}
	}

	/* Mobile (480px to 768px) */
	@media (max-width: 480px) {
		header {
			height: 52px;
		}

		.header-content {
			margin: 0 10px;
			gap: 6px;
		}

		.logo-section {
			flex-shrink: 0;
		}

		.logo {
			height: 32px;
			width: auto;
		}

		.right-section {
			gap: 6px;
			margin-left: auto;
		}

		.mobile-menu-toggle {
			display: flex;
			flex-shrink: 0;
		}

		.menu-icon {
			width: 22px;
			height: 22px;
		}

		.nav-tabs {
			position: fixed;
			top: 52px;
			left: 0;
			right: 0;
			bottom: 0;
			max-height: 0;
		}

		.nav-tabs.active {
			max-height: 100vh;
		}

		.nav-tabs a {
			padding: 11px 14px;
			font-size: 0.9rem;
		}

		.dropdown-trigger {
			padding: 11px 14px;
			font-size: 0.9rem;
		}

		.dropdown-panel {
			max-height: 0;
		}

		.dropdown.active .dropdown-panel {
			max-height: 220px;
		}

		.mobile-auth {
			gap: 8px;
			margin-top: auto;
			padding: 12px 10px;
			flex-direction: row;
			width: fit-content;
		}

		.mobile-auth a {
			padding: 11px 14px;
			font-size: 0.9rem;
			border-radius: 16px;
			display: inline-flex;
		}

		.desktop-signin,
		.desktop-signup {
			display: none;
		}

		.language-icon {
			width: 30px;
			height: 30px;
		}

		.language-icon img {
			width: 15px;
			height: 15px;
		}
	}


</style>
