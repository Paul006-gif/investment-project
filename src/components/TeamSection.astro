<section class="meet-team-section">
	<h2>Meet Our Team</h2>
	<div class="team-cards-container">
		<div class="team-card">
			<div class="team-image-wrapper">
				<img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=687&q=80" alt="Team Member 1" class="team-image" />
				<div class="team-overlay">
					<div class="team-info">
						<h3>Austin Mcfee</h3>
						<p>CEO & Founder</p>
					</div>
				</div>
			</div>
		</div>
		<div class="team-card">
			<div class="team-image-wrapper">
				<img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" alt="Team Member 2" class="team-image" />
				<div class="team-overlay">
					<div class="team-info">
						<h3>Sarah Johnson</h3>
						<p>Marketing Director</p>
					</div>
				</div>
			</div>
		</div>
		<div class="team-card">
			<div class="team-image-wrapper">
				<img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=687&q=80" alt="Team Member 3" class="team-image" />
				<div class="team-overlay">
					<div class="team-info">
						<h3>Michael Chen</h3>
						<p>Lead Developer</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.meet-team-section {
		padding: 60px 250px;
		text-align: center;
	}

	.meet-team-section h2 {
		font-size: 2.5rem;
		font-weight: 700;
		color: #000000;
		margin: 0 0 40px 0;
	}

	.team-cards-container {
		display: flex;
		gap: 30px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.team-card-wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.team-card {
		flex: 1;
		min-width: 350px;
		max-width: 400px;
		height: 500px;
		background: rgba(59, 130, 246, 0.1);
		border-radius: 25px;
		padding: 0;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		cursor: pointer;
		overflow: hidden;
	}

	.team-image-wrapper {
		position: relative;
		width: 100%;
		height: 100%;
		border-radius: 25px;
		overflow: hidden;
	}

	.team-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 25px;
		transition: transform 0.3s ease;
	}

	.team-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: #1e40af;
		transform: translateY(100%);
		transition: transform 0.3s ease;
		border-radius: 25px 25px 0 0;
		padding: 20px;
	}

	.team-image-wrapper:hover .team-overlay {
		transform: translateY(0);
	}

	.team-image-wrapper:hover .team-image {
		transform: scale(1.05);
	}

	.team-info {
		text-align: center;
		color: #ffffff !important;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.team-info h3 {
		font-size: 1.6rem;
		font-weight: 700;
		margin: 0 0 10px 0;
		color: #ffffff !important;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.team-info p {
		font-size: 1.1rem;
		font-weight: 500;
		margin: 0;
		color: #ffffff !important;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.team-card-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.team-avatar {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		background: #e2e8f0;
		margin-bottom: 20px;
	}

	.team-card h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #000000;
		margin: 0 0 10px 0;
	}

	.team-card p {
		font-size: 1rem;
		color: #666666;
		margin: 0;
	}

	@media (max-width: 768px) {
		.meet-team-section {
			padding: 40px 20px;
		}
		
		.team-cards-container {
			flex-direction: column;
			align-items: center;
		}
		
		.team-card {
			max-width: 100%;
		}
	}
</style>
